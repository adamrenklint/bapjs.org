@require "asimov.highlight"

$light = #f8f8f8
$dark = #515151
$less_dark = #515151
$primary = #610007

body, div, h1, h2, h3, h4, h5, h6
  margin 0
  padding 0

body
  font-family 'Source Sans Pro', sans-serif
  font-size 1.3rem
  color $dark

.sidebar
  background-color $primary
  color $light
  width 15rem
  position fixed
  height 100%
  padding 1.5rem

  #baplogo
    max-width 180px
    fill $light
    margin-top 0.5rem

  ul
    list-style none
    padding 0

    a
      display block

  a
    color $light
    text-decoration none

  .active
    position relative
    :before
      content "Â»"
      position absolute
      top -0.1rem
      margin-left -0.8rem
      margin-right 0.5rem

.sidebar__tagline
  margin-bottom 2rem
  font-size 1.5rem

.sidebar__credits
  margin-top 2rem

.main
  max-width 700px
  padding 3rem 3rem 3rem 22rem

  h1
    font-size 3rem
    margin-bottom 1.5rem

  p
    margin 0.5rem 0

  a
    color $less_dark
    font-weight bold
    text-decoration none
    &:hover
      color $primary

  ul
    margin-left -0.5rem

  code
    font-size 1rem

.headline
  .headline__header
    position relative
    margin-top 1rem
    margin-bottom 0.8rem
    &:hover
      .headline__symbol
        display block
  h2
    .headline__symbol
      left -1.5rem
  h3
    .headline__symbol
      left -1.2rem
  h4
    .headline__symbol
      left -1rem
  .headline__symbol
    position absolute
    padding-right 1rem
    display none

.bap-editor
  position relative

.bap-editor__controls
  position absolute
  right 0
  top 0
  clear left
  opacity 0.5

  button
    border none
    float left
    display block
    padding 10px 15px
    font-size 2rem
    width 70px
    height 60px

    &:hover
      cursor pointer

  label
    padding 10px 15px
    float left
    display block
    font-size 2rem
    background-color lightgrey
